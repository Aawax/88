    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('.nav-link');
            const pages = document.querySelectorAll('.page');
            
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    
                    navLinks.forEach(l => l.classList.remove('active'));
                    
                   
                    this.classList.add('active');
                    
                   
                    pages.forEach(page => page.classList.remove('active-page'));
                    
                    
                    const pageId = this.getAttribute('data-page');
                    document.getElementById(pageId).classList.add('active-page');
                });
            });
        });
    </script>
</body>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const navLinks = document.querySelectorAll('.nav-link');
        const pages = document.querySelectorAll('.page');
        
     
        navLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                
            
                navLinks.forEach(l => l.classList.remove('active'));
                
             
                this.classList.add('active');
                
               
                pages.forEach(page => page.classList.remove('active-page'));
                
              
                const pageId = this.getAttribute('data-page');
                document.getElementById(pageId).classList.add('active-page');
            });
        });
        
     
        const productCards = document.querySelectorAll('.product-card');
        
        productCards.forEach(card => {
            card.style.cursor = 'pointer'; // Меняем курсор на указатель
            
            card.addEventListener('click', function() {
              
                navLinks.forEach(l => l.classList.remove('active'));
                
               
                const productLink = document.querySelector('[data-page="product"]');
                productLink.classList.add('active');
                
               
                pages.forEach(page => page.classList.remove('active-page'));
                
              
                document.getElementById('product').classList.add('active-page');
                
              
                const productId = this.getAttribute('data-product');
                console.log('Открыт товар с ID:', productId);
                
                
                updateProductPage(productId);
            });
        });
        
     
        function updateProductPage(productId) {
            const productTitles = {
                1: "ПРЕМИУМ ТОВАР - Профессиональная серия",
                2: "ИННОВАЦИОННЫЙ ПРОДУКТ - Технологии будущего", 
                3: "ЭКСКЛЮЗИВНОЕ ПРЕДЛОЖЕНИЕ - Ограниченный тираж"
            };
            
            const productDescriptions = {
                1: "Высококачественный продукт премиум-класса для профессионального использования",
                2: "Инновационное решение с передовыми технологиями для современных потребностей",
                3: "Эксклюзивный товар с ограниченным тиражом для ценителей качества"
            };
            
         
            const productTitle = document.querySelector('#product .product-title');
            if (productTitle && productTitles[productId]) {
                productTitle.textContent = productTitles[productId];
            }
            
           
            const productDesc = document.querySelector('#product .product-details p');
            if (productDesc && productDescriptions[productId]) {
                productDesc.textContent = productDescriptions[productId];
            }
            
          
            const productImage = document.querySelector('#product .product-image');
            if (productImage) {
                productImage.textContent = `ТОВАР ${productId}`;
            }
        }
    });
</script>
</html>
